{
  "name": "@bitcoin-pay/root",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "turbo --filter './packages/*' --filter './examples/*' build",
    "dev": "turbo --filter './packages/*' --filter './examples/*' dev",
    "dev:next": "turbo --filter './examples/nextjs' dev",
    "dev:dts": "turbo --filter './packages/*' dev:dts",
    "clean": "turbo --filter './packages/*' --filter './examples/*' clean && rm -rf node_modules",
    "format": "biome format . --write",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "test": "turbo --filter \"./packages/*\" test",
    "typecheck": "turbo --filter \"./packages/*\" typecheck"
  },
  "dependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/node": "^20.17.9",
    "cross-env": "^7.0.3",
    "turbo": "^2.3.3",
    "typescript": "5.6.1-rc"
  },
  "devDependencies": {
    "bip32": "^5.0.0",
    "ecpair": "^3.0.0",
    "tiny-secp256k1": "^2.2.4"
  }
}
